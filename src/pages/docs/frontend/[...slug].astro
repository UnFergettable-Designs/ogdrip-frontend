import { getCollection } from 'astro:content';
import Layout from '../../../layouts/Layout.astro';

export async function getStaticPaths() {
  const frontendEntries = await getCollection('frontend_docs');
  return frontendEntries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

<Layout title={entry.data.title}>
  <main>
    <div class="breadcrumbs">
      <a href="/documentation">Documentation</a> &gt; <span>{entry.data.title}</span>
    </div>

    <article class="content">
      <header>
        <h1>{entry.data.title}</h1>
        {entry.data.updated && (
          <p class="updated">Updated: {entry.data.updated.toLocaleDateString()}</p>
        )}
      </header>
      
      <Content />

      <footer>
        <a href="/documentation" class="back-link">&larr; Back to Documentation</a>
      </footer>
    </article>
  </main>
</Layout>

