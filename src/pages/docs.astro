    margin-bottom: 0.5rem;
  }

  .docs-sidebar a {
    color: #4338ca;
    text-decoration: none;
    display: block;
    padding: 0.5rem;
    border-radius: 4px;
  }

  .docs-sidebar a:hover {
    background-color: #f1f5f9;
  }

  .admin-link a {
    color: #4338ca;
    font-weight: 600;
    border-left: 3px solid #4338ca;
    background-color: rgba(67, 56, 202, 0.05);
  }

  .admin-link a:hover {
    background-color: rgba(67, 56, 202, 0.1);
  }

  .docs-content section {
    margin-bottom: 3rem;
    max-width: 800px;
  }

  .docs-content h2 {
    font-size: 1.8rem;
    margin-top: 0;
    margin-bottom: 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid #e2e8f0;
    color: #1e293b;
  }

  .docs-content h3 {
    font-size: 1.3rem;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    color: #334155;
  }

  .docs-content p {
    margin-bottom: 1rem;
    line-height: 1.6;
  }

  .docs-content ul,
  .docs-content ol {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
  }

  .docs-content li {
    margin-bottom: 0.5rem;
  }

  pre {
    background-color: #f8f9fa;
    padding: 1rem;
    border-radius: 4px;
    overflow-x: auto;
    margin-bottom: 1.5rem;
    border: 1px solid #e9ecef;
  }

  code {
    font-family:
      "SFMono-Regular", Consolas, "Liberation Mono", Menlo, monospace;
    font-size: 0.9rem;
  }

  .admin-docs-card {
    background-color: #f1f5f9;
    border-radius: 8px;
    padding: 1.5rem;
    margin-bottom: 1.5rem;
    border-left: 4px solid #4338ca;
  }

  .admin-docs-link {
    display: inline-block;
    margin-top: 0.75rem;
    padding: 0.5rem 1rem;
    background-color: #4338ca;
    color: white;
    text-decoration: none;
    border-radius: 4px;
    font-weight: 500;
  }

  .admin-docs-link:hover {
    background-color: #3730a3;
  }

  .admin-features-list {
    background-color: #fafafa;
    padding: 1.5rem;
    border-radius: 8px;
    border: 1px solid #e9ecef;
  }
</style>
