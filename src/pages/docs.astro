    display: grid;
    grid-template-columns: 250px 1fr;
    gap: 2rem;
  }

  @media (max-width: 768px) {
    .docs-container {
      grid-template-columns: 1fr;
    }
  }

  .docs-sidebar {
    position: sticky;
    top: 2rem;
    align-self: start;
  }

  .docs-sidebar h3 {
    font-size: 1.1rem;
    margin-bottom: 0.75rem;
    color: #444;
  }

